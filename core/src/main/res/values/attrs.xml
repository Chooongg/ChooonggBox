<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ArcLayout">
        <attr name="arc_height" format="dimension" />
        <attr name="arc_position">
            <enum name="bottom" value="1"/>
            <enum name="top" value="2"/>
            <enum name="left" value="3"/>
            <enum name="right" value="4"/>
        </attr>
        <attr name="arc_cropDirection" format="enum">
            <enum name="cropInside" value="1"/>
            <enum name="cropOutside" value="2"/>
        </attr>
    </declare-styleable>

    <attr name="basisAxis">
        <enum name="basisWidth" value="0" />
        <enum name="basisHeight" value="1" />
    </attr>

    <!-- 自动文字大小调整 -->
    <declare-styleable name="AutoSizeTextView">
        <attr name="ast_autoSizeEnable" format="boolean" />
        <attr name="ast_minTextSize" format="dimension" />
        <attr name="ast_precision" format="float" />
    </declare-styleable>


    <!-- Box 工具栏 -->
    <attr name="defaultNavigation" format="boolean" />
    <attr name="autoSetActionBar" format="boolean" />
    <declare-styleable name="BoxToolbar">
        <attr name="defaultNavigation" />
        <attr name="autoSetActionBar" />
    </declare-styleable>
    <declare-styleable name="BoxToolbarLayout">
        <attr name="toolbarMode" format="enum">
            <enum name="small" value="0" />
            <enum name="medium" value="1" />
            <enum name="large" value="2" />
        </attr>

        <attr name="liftOnScroll" />
        <attr name="liftOnScrollTargetViewId" />
        <attr name="maxLines" />

        <attr name="defaultNavigation" />
        <attr name="autoSetActionBar" />
    </declare-styleable>

    <!-- 重力粘性对齐RecyclerView -->
    <declare-styleable name="GravitySnapRecyclerView">
        <attr name="snapGravity" format="enum">
            <enum name="start" value="0" />
            <enum name="top" value="1" />
            <enum name="end" value="2" />
            <enum name="bottom" value="3" />
            <enum name="center" value="4" />
        </attr>
        <attr name="snapEnabled" format="boolean" />
        <attr name="snapLastItem" format="boolean" />
        <attr name="snapToPadding" format="boolean" />
        <attr name="snapScrollMsPerInch" format="float" />
        <attr name="snapMaxFlingSizeFraction" format="float" />
    </declare-styleable>

    <attr name="shimmer_color" format="color" />
    <attr name="shimmer_animation_duration" format="integer" />
    <attr name="shimmer_auto_start" format="boolean" />
    <attr name="shimmer_angle" format="integer" />
    <attr name="shimmer_mask_width" format="float" />
    <attr name="shimmer_gradient_center_color_width" format="float" />
    <attr name="shimmer_reverse_animation" format="boolean" />

    <!-- 蒙版ConstraintLayout -->
    <declare-styleable name="ShimmerConstraintLayout">
        <attr name="shimmer_color" />
        <attr name="shimmer_animation_duration" />
        <attr name="shimmer_auto_start" />
        <attr name="shimmer_angle" />
        <attr name="shimmer_mask_width" />
        <attr name="shimmer_gradient_center_color_width" />
        <attr name="shimmer_reverse_animation" />
    </declare-styleable>

    <!-- 蒙版FrameLayout -->
    <declare-styleable name="ShimmerFrameLayout">
        <attr name="shimmer_color" />
        <attr name="shimmer_animation_duration" />
        <attr name="shimmer_auto_start" />
        <attr name="shimmer_angle" />
        <attr name="shimmer_mask_width" />
        <attr name="shimmer_gradient_center_color_width" />
        <attr name="shimmer_reverse_animation" />
    </declare-styleable>

    <!-- 蒙版LinearLayout -->
    <declare-styleable name="ShimmerLinearLayout">
        <attr name="shimmer_color" />
        <attr name="shimmer_animation_duration" />
        <attr name="shimmer_auto_start" />
        <attr name="shimmer_angle" />
        <attr name="shimmer_mask_width" />
        <attr name="shimmer_gradient_center_color_width" />
        <attr name="shimmer_reverse_animation" />
    </declare-styleable>

    <!-- 标签文本 -->
    <declare-styleable name="SlantedTextView">
        <attr name="slantedTextSize" format="dimension" />
        <attr name="slantedBackgroundColor" format="color" />
        <attr name="slantedText" format="string" />
        <attr name="slantedTextColor" format="color" />
        <attr name="slantedLength" format="dimension" />
        <attr name="slantedMode" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="left_bottom" value="2" />
            <enum name="right_bottom" value="3" />
            <enum name="left_triangle" value="4" />
            <enum name="right_triangle" value="5" />
            <enum name="left_bottom_triangle" value="6" />
            <enum name="right_bottom_triangle" value="7" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PickerRecyclerView">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="visibleCount" format="integer" />
        <attr name="isLoop" format="boolean" />
        <attr name="scaleX" format="float" />
        <attr name="scaleY" format="float" />
        <attr name="alpha" format="float" />

        <attr name="dividerVisible" format="boolean" />
        <attr name="dividerColor" format="color" />
        <attr name="dividerSize" format="dimension" />
        <attr name="dividerMargin" format="dimension" />
    </declare-styleable>

    <attr name="sizeRatio" format="string" />

    <!-- 宽高比布局 -->
    <declare-styleable name="RatioView">
        <!-- 宽高比例 -->
        <attr name="sizeRatio" />
    </declare-styleable>
    <declare-styleable name="RatioCardView">
        <!-- 宽高比例 -->
        <attr name="sizeRatio" />
    </declare-styleable>
    <declare-styleable name="RatioConstraintLayout">
        <!-- 宽高比例 -->
        <attr name="sizeRatio" />
    </declare-styleable>
    <declare-styleable name="RatioFrameLayout">
        <!-- 宽高比例 -->
        <attr name="sizeRatio" />
    </declare-styleable>

    <declare-styleable name="TyperTextView">
        <attr name="typerSpeed" format="integer" />
        <attr name="charIncrease" format="integer" />
    </declare-styleable>

    <declare-styleable name="VerticalTextView">
        <attr name="direction">
            <enum name="upToDown" value="0" />
            <enum name="downToUp" value="1" />
            <enum name="leftToRight" value="2" />
            <enum name="rightToLeft" value="3" />
        </attr>
    </declare-styleable>

</resources>