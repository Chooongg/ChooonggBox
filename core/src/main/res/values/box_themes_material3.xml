<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BoxTheme.Material3.Surface" parent="Base.BoxTheme.Material3">
        <item name="android:statusBarColor">#11000000</item>
        <item name="toolbarStyle">@style/BoxWidget.Material3.Toolbar.OnSurface</item>
        <item name="appBarLayoutStyle">@style/BoxWidget.Material3.AppBarLayout.Surface</item>
        <item name="collapsingToolbarLayoutMediumStyle">
            @style/BoxWidget.Material3.CollapsingToolbar.Medium.Surface
        </item>
        <item name="collapsingToolbarLayoutLargeStyle">
            @style/BoxWidget.Material3.CollapsingToolbar.Large.Surface
        </item>
    </style>

    <style name="BoxTheme.Material3.Surface.CenterTitle" parent="BoxTheme.Material3.Surface">
        <item name="toolbarStyle">@style/BoxWidget.Material3.Toolbar.OnSurface.Center</item>
    </style>

    <style name="BoxTheme.Material3.Primary" parent="Base.BoxTheme.Material3">
        <item name="toolbarStyle">@style/BoxWidget.Material3.Toolbar.OnPrimary</item>
        <item name="toolbarNavigationButtonStyle">
            @style/BoxWidget.Toolbar.Button.Navigation.Primary
        </item>
        <item name="appBarLayoutStyle">@style/BoxWidget.Material3.AppBarLayout.Primary</item>
        <item name="collapsingToolbarLayoutMediumStyle">
            @style/BoxWidget.Material3.CollapsingToolbar.Medium.Primary
        </item>
        <item name="collapsingToolbarLayoutLargeStyle">
            @style/BoxWidget.Material3.CollapsingToolbar.Large.Primary
        </item>
    </style>

    <style name="BoxTheme.Material3.Primary.CenterTitle" parent="BoxTheme.Material3.Primary">
        <item name="toolbarStyle">@style/BoxWidget.Material3.Toolbar.OnPrimary.Center</item>
    </style>

    <style name="BoxTheme.Material3.PrimarySurface" parent="Base.BoxTheme.Material3">
        <item name="toolbarStyle">@style/BoxWidget.Material3.Toolbar.OnPrimary</item>
        <item name="toolbarNavigationButtonStyle">
            @style/BoxWidget.Toolbar.Button.Navigation.Primary
        </item>
        <item name="appBarLayoutStyle">@style/BoxWidget.Material3.AppBarLayout.Primary</item>
        <item name="collapsingToolbarLayoutMediumStyle">
            @style/BoxWidget.Material3.CollapsingToolbar.Medium.Primary
        </item>
        <item name="collapsingToolbarLayoutLargeStyle">
            @style/BoxWidget.Material3.CollapsingToolbar.Large.Primary
        </item>
    </style>

    <style name="BoxTheme.Material3.PrimarySurface.CenterTitle" parent="BoxTheme.Material3.PrimarySurface">
        <item name="toolbarStyle">@style/BoxWidget.Material3.Toolbar.OnPrimary.Center</item>
    </style>

    <style name="Base.BoxTheme.Material3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorOutline">@color/outline</item>
        <!-- 过渡动画 -->
        <item name="android:windowAnimationStyle">@style/BoxWindowAnimation</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- 圆角设置 -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearanceImage.Rounded.8dp</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceImage.Rounded.16dp</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearanceImage.Rounded.24dp</item>
        <!-- 工具栏配置 -->
        <item name="statusBarScrim">@android:color/transparent</item>
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.Surface</item>
        <item name="actionBarStyle">@style/BoxWidget.Toolbar.Surface</item>
        <item name="actionBarSize">@dimen/d48</item>
        <item name="titleCentered">false</item>
        <item name="subtitleCentered">false</item>
        <!-- Dialog -->
        <item name="materialAlertDialogTheme">
            @style/ThemeOverlay.Material3.MaterialAlertDialog.FillWidth.Center
        </item>
    </style>

</resources>