<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BoxTheme.Surface" parent="Base.BoxTheme">
        <item name="android:statusBarColor">#dddddd</item>
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.Surface</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>
    </style>

    <style name="BoxTheme.Surface.CenterTitle" parent="BoxTheme.Surface">
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.Surface.Center</item>
    </style>

    <style name="BoxTheme.Primary" parent="Base.BoxTheme">
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.Primary</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Primary</item>
    </style>

    <style name="BoxTheme.Primary.CenterTitle" parent="BoxTheme.Primary">
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.Primary.Center</item>
    </style>

    <style name="BoxTheme.PrimarySurface" parent="Base.BoxTheme">
        <item name="android:statusBarColor">?colorPrimarySurface</item>
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.PrimarySurface</item>
        <item name="appBarLayoutStyle">
            @style/Widget.MaterialComponents.AppBarLayout.PrimarySurface
        </item>
    </style>

    <style name="BoxTheme.PrimarySurface.CenterTitle" parent="BoxTheme.PrimarySurface">
        <item name="toolbarStyle">@style/BoxWidget.Toolbar.PrimarySurface.Center</item>
    </style>

    <style name="Base.BoxTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorOutline">@color/outline</item>
        <!-- 过渡动画 -->
        <item name="android:windowAnimationStyle">@style/BoxWindowAnimation</item>
        <item name="windowActionModeOverlay">false</item>
        <!-- 圆角设置 -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearanceImage.Rounded.8dp</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceImage.Rounded.16dp</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearanceImage.Rounded.24dp</item>
        <!-- 工具栏配置 -->
        <item name="statusBarScrim">@android:color/transparent</item>
        <item name="actionBarSize">@dimen/d48</item>
        <!-- Dialog -->
        <item name="materialAlertDialogTheme">
            @style/ThemeOverlay.MaterialComponents.MaterialAlertDialog.Centered.FillWidth
        </item>
        <item name="android:configChanges">keyboardHidden|orientation|screenSize</item>
    </style>
</resources>